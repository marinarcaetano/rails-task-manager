<h1>New Task</h1>
<h1><%= @task.title %></h1>
<h2><%= @task.details %> </h2>
<% if @task.completed %>
  <p><%= "This task is completed" %></p>
<% else %>
  <p><%= "This task is not completed yet" %></p>
<% end %>


<%= link_to "Edit this task", edit_task_path%>

<%= link_to "Back to list", tasks_path%>

<%= link_to "Delete task", delete_task_path(@task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task foreeeever!?"}%>
